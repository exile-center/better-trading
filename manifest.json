{
  "name": "PoeWorld Better Trading",
  "version": "0.0.1",
  "description": "",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["*://www.pathofexile.com/trade/*"],
      "js": [
        "dist/assets/vendor.js",
        "dist/assets/better-trading.js"
      ],
      "css": [
        "dist/assets/vendor.css",
        "dist/assets/better-trading.css"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "*://poe.ninja/*"
  ],
  "web_accessible_resources": [
    "dist/assets/images/*"
  ]
}
