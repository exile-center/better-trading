<ModalDialog
  @translucentOverlay={{true}}
  @targetAttachment="center"
  @onClose={{fn @onClose}}
>
  <div
    {{did-insert (fn this.bindEscapeKey)}}
    {{will-destroy (fn this.unbindEscapeKey)}}
    local-class="container"
    ...attributes
  >
    <header local-class="header">
      <h1 local-class="header-title">
        <img
          local-class="header-title-logo"
          src={{image-resource-url "logo.png"}}
        >

        {{@title}}
      </h1>

      <button
        {{on "click" (fn @onClose)}}
        type="button"
        local-class="header-close"
      >
        <FaIcon @icon="times" />
      </button>
    </header>

    <div local-class="body">
      {{yield}}
    </div>
  </div>
</ModalDialog>
